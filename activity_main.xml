<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/images"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/merry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Merry Christmas!"

        android:fontFamily="sans-serif-light"
        android:textColor="#FF1493"
        android:textStyle="bold"

        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:textSize="30sp"
         />

    <TextView
        android:id="@+id/and"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="And"

        android:textColor="#FF1493"
        android:textStyle="bold"
        android:layout_below="@id/merry"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:textSize="24sp"
        />


    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Happy New Year!!!"

        android:fontFamily="sans-serif-light"
        android:textColor="#FF1493"
        android:textStyle="bold"
        android:layout_below="@id/and"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"

        android:textSize="30sp"
        />

    <TextView
        android:id="@+id/phrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Christmas isn't a season.It's a feeling.
        May your present be many and your troubles be few."

        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_below="@id/text"
        android:layout_marginTop="80dp"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From, Abhishek"

        android:fontFamily="android italic"
        android:textColor="#FF1493"
        android:textStyle="bold"

        android:layout_margin="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textSize="30sp"
        />

</RelativeLayout>